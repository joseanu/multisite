{%- if page.breadcrumbs -%}
  {%- assign crumbs = page.breadcrumbs | split: '/' -%}
{%- else -%}
  {%- assign crumbs = page.url | remove:'/index.html' | split: '/' -%}
{%- endif -%}

"breadcrumb": {
  "@type":"BreadcrumbList",
  "itemListElement":[
    {
      "@type":"ListItem",
      "position":"1",
      "item":{
        "@id":"{{ site.url }}/#site",
        "name":"JR Ecotecnolog√≠a"
      }
    },
{%- for crumb in crumbs offset: 1 -%}
  {%- if forloop.last -%}
    {
      "@type":"ListItem",
      "position":"{{ forloop.index | plus: 1 }}",
      "item":{
        "@id": "{{ include.url }}",
        "name":"{{ include.title }}"
      }
    }
  {%- else -%}
    {%- capture url -%}{% assign crumb_limit = forloop.index | plus: 1 %}{% for crumb in crumbs limit: crumb_limit %}{{ crumb | append: '/' }}{% endfor %}{%- endcapture -%}
    {%- for pagina in site.pages -%}
      {%- if pagina.url == url -%}
        {%- assign name = pagina.title -%}
        {%- if pagina.tipo -%}
          {%- assign tipo = pagina.tipo -%}
        {%- else -%}
          {%- assign tipo = 'WebPage' -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
    {
      "@type":"ListItem",
      "position":"{{ forloop.index | plus: 1 }}",
      "item":{
        "@type": "{{ tipo }}",
        "@id": "{{ url | prepend: site.url }}",
        "name":"{{ name }}"
      }
    },
  {%- endif -%}
{%- endfor -%}
  ]
},
